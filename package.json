{
  "name": "npm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "browser-sync start --server ./dist --files 'dist/**/*.*'",
    "pug": "pug --pretty src/pug/*.pug -o dist/",
    "sass": "node-sass --output-style expanded --indent-type tab --indent-width 1 -o src/css src/sass",
    "stylus": "stylus --include-css src/stylus/style.styl -o src/css/style.css",
    "preset-env": "postcss src/css/**/* -u postcss-preset-env --dir dist/css",
    "postcss": "postcss src/css/style.css -o src/css/output/style.css",
    "postcss-prod": "mkdir -p dist/css && NODE_ENV=production postcss src/css/style.css -o src/css/output/style.css",
    "import": "postcss inc/import.css -map -u postcss-import -o dist/css/build.css",
    "import-nomap": "postcss inc/import.css --no-map -u postcss-import -o dist/css/build.css",
    "import-prod": "postcss inc/import.css -map -u postcss-import cssnano -o dist/css/build.min.css",
    "im": "mkdir -p dist/images && imagemin src/images/**.* --plugin=\"mozjpeg\" --plugin=\"pngquant\" -o dist/images",
    "svgo": "svgo -f src/images/icons -o dist/images && svgo -f src/pug/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "babel": "mkdir -p dist/js && babel src/js/main.js --presets @babel/preset-env -d src/js/native",
    "browfy": "browserify inc/import.js --im --debug | exorcist dist/js/build.map.js > dist/js/build.js",
    "uglify": "uglifyjs dist/js/build.js --comments \"/sourceMappingURL/\" -m reserved=['$','addTo','exports'] --toplevel -c -o dist/js/build.min.js",
    "build:img": "run-s im svgo",
    "watch:img": "onchange 'src/images/**/*' -- run-s build:img",
    "build:html": "npm run pug",
    "watch:html": "onchange 'src/pug' -- run-s build:html",
    "build:js": "run-s babel browfy",
    "build-prod:js": "run-s babel browfy uglify",
    "watch:js": "onchange 'src/js' 'inc/import.js' --exclude 'src/js/native' -- run-s build:js",
    "build:css": "run-s sass postcss import",
    "build-prod:css": "run-s sass postcss-prod import-nomap import-prod",
    "watch:css": "onchange 'src/sass/**/*.sass' 'inc/import.css' --exclude 'src/css/output' -- run-s build:css",
    "build": "run-s clean build:*",
    "watch": "run-p serve watch:*",
    "clean": "rimraf dist/*",
    "prod": "run-s clean build:img build:html build-prod:*",
    "start": "run-s clean build watch"
  },
  "author": "",
  "license": "ISC",
  "browserslist": [
    "last 2 version",
    "> 5%",
    "IE>11",
    "IOS >=7"
  ],
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.2.1",
    "browser-sync": "^2.26.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.5",
    "doiuse": "^4.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "exorcist": "^1.0.1",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^6.0.1",
    "postcss-font-magician": "^2.2.1",
    "postcss-import": "^12.0.0",
    "postcss-load-config": "^2.0.0",
    "postcss-momentum-scrolling": "^1.4.8",
    "postcss-preset-env": "^6.1.2",
    "postcss-short": "^4.1.0",
    "postcss-sprites": "^4.2.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "sass": "^1.16.1",
    "stylelint": "^9.6.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.1.1",
    "uglify-js": "^3.4.9",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "@glidejs/glide": "^3.2.6",
    "babel-polyfill": "^6.26.0",
    "jquery": "^3.3.1",
    "normalize.css": "^8.0.0"
  }
}
